<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2dfdb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="tohamy.amal.quizapp.MainPage">

        <ImageView
            android:id="@+id/brain_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:src="@drawable/idea" />

        <TextView
            android:id="@+id/brain_quiz_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brain_image"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:text="@string/brain_quiz"
            android:textColor="@android:color/black"
            android:textSize="60sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/start_button"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/brain_quiz_textview"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:background="@drawable/button"
            android:onClick="startQuiz"
            android:shadowColor="#64d8cb"
            android:shadowRadius="5"
            android:text="@string/start_quiz"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </RelativeLayout>

</ScrollView>
